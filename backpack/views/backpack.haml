!!! 5
%html
  %head
    %link{:rel => :stylesheet, :type => 'text/css', :href =>'css/style.css'}
    %title Badge Backpack
  %body
    
    %div.embedcode
      %h3 Put this on your site to show your public badges
      %textarea{:readonly => true}= "<div id='badge_container'></div>\n<script src='http://hub.rembr.it/view/#{@encoded_user}'></script>"
    
    %h1= "Backpack #{@version}"
    %h2= @user
    
      

    - @badgesets.each do |set, badges|
      %section{:role => 'badgeset'}
        %h2{:role => 'set-title'}= "#{set} badges"
        %ul{:role => 'badges', :class => 'container', :rel => set}
          - badges.each do |badge|
            %li{:role => 'badge', :class => 'badge', :id => badge['_id']}
              %a
                %img.artifact{:src => ['//', badge['issuer'], badge['image']].join(''),
                              :alt => badge['title']}
                %h1= badge['title']
                %h2= badge['org']
                %h3= badge['suborg']
                %p= badge['description']
        %br

    %script{:src => '//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js'}
    %script{:src => '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js'}
    %script{:src => '/js/backpack.js'}
      
